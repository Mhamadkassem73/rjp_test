@model rjp_test.ViewModels.AccountViewModel
@{
    ViewData["Title"] = "Open Account";
}

<!DOCTYPE html>
<html>
<head>
    <title>Open Account</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Open Account</h1>
        <form method="post" asp-action="OpenAccount" asp-controller="Account">
            <div class="form-group">
                <label for="CustomerId">Customer:</label>
                <select id="CustomerId" name="CustomerId" asp-for="CustomerId" class="form-control">
                    @foreach (var customer in Model.Customers)
                    {
                        <option value="@customer.Id">@customer.Name @customer.Surname</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="InitialCredit">Initial Credit:</label>
                <input type="number" id="InitialCredit" name="InitialCredit" asp-for="InitialCredit" step="1" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Open Account</button>
        </form>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
